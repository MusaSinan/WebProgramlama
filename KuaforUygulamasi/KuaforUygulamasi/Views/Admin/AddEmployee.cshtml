@model KuaforUygulamasi.Models.Employee

<h2>Yeni Çalışan Ekle</h2>

<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label for="FullName">Ad Soyad</label>
        <input type="text" class="form-control" id="FullName" name="FullName" placeholder="Çalışan adı giriniz" required />
    </div>

    <div class="form-group">
        <label for="ServiceId">Hizmet</label>
        <select class="form-control" id="ServiceId" name="ServiceId" required>
            <option value="">Hizmet Seçin</option>
            <option value="1">Saç Tıraşı</option>
            <option value="2">Sakal Tıraşı</option>
        </select>
    </div>

    <div class="form-group">
        <label for="IsAvailable">Uygunluk</label>
        <select class="form-control" id="IsAvailable" name="IsAvailable" required>
            <option value="true">Uygun</option>
            <option value="false">Meşgul</option>
        </select>
    </div>

    <div class="form-group">
        <label for="AvailabilityStart">Uygunluk Başlangıç Saati</label>
        <input type="time" class="form-control" id="AvailabilityStart" name="AvailabilityStart" required />
    </div>

    <div class="form-group">
        <label for="AvailabilityEnd">Uygunluk Bitiş Saati</label>
        <input type="time" class="form-control" id="AvailabilityEnd" name="AvailabilityEnd" required />
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
    <a href="@Url.Action("ListEmployees", "Admin")" class="btn btn-secondary">Geri Dön</a>
</form>